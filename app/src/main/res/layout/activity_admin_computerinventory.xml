<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin_computerinventory">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="100px">

        <ImageButton
            android:id="@+id/btnbackbutton"
            android:layout_width="47dp"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter"
            android:src="@drawable/icons8_back_button_96___" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="112dp"
        android:layout_height="112dp"
        app:srcCompat="@drawable/_701051780322"
        tools:src="@drawable/_701051780322"
        android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Computer Laboratories"
            android:textSize="32sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="163dp"
            android:paddingTop="20px">

            <ImageButton
                android:id="@+id/btncomputerlab1"
                android:layout_width="152dp"
                android:layout_height="122dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="150px"
                android:background="#00FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/lab1" />

            <ImageButton
                android:id="@+id/btncomputerlab2"
                android:layout_width="159dp"
                android:layout_height="122dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="100px"
                android:background="#00FFFFFF"
                android:scaleType="centerInside"
                android:src="@drawable/lab2" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="163dp"
            android:paddingTop="20px">

            <ImageButton
                android:id="@+id/btncomputerlab3"
                android:layout_width="150dp"
                android:layout_height="122dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="150px"
                android:background="#00FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/lab3" />

            <ImageButton
                android:id="@+id/btncomputerlab4"
                android:layout_width="156dp"
                android:layout_height="122dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="100px"
                android:background="#00FFFFFF"
                android:scaleType="centerInside"
                android:src="@drawable/lab4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="163dp"
            android:paddingTop="20px">

            <ImageButton
                android:id="@+id/btncomputerlab5"
                android:layout_width="148dp"
                android:layout_height="122dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="150px"
                android:background="#00FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/lab5" />

            <ImageButton
                android:id="@+id/btncomputerlab6"
                android:layout_width="156dp"
                android:layout_height="122dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="100px"
                android:background="#00FFFFFF"
                android:scaleType="centerInside"
                android:src="@drawable/lab6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="163dp"
            android:paddingTop="20px">

            <ImageButton
                android:id="@+id/btnaccountinglab"
                android:layout_width="152dp"
                android:layout_height="122dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="150px"
                android:background="#00FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/aclab" />

            <ImageButton
                android:id="@+id/btncontactcenterlab"
                android:layout_width="156dp"
                android:layout_height="122dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="100px"
                android:background="#00FFFFFF"
                android:scaleType="centerInside"
                android:src="@drawable/cclab" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="163dp"
            android:paddingTop="20px">

            <ImageButton
                android:id="@+id/btnciscolab"
                android:layout_width="151dp"
                android:layout_height="122dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="150px"
                android:background="#00FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/cisco" />

            <ImageButton
                android:id="@+id/btnhardwarelab"
                android:layout_width="156dp"
                android:layout_height="122dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="100px"
                android:background="#00FFFFFF"
                android:scaleType="centerInside"
                android:src="@drawable/hwlab" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>