<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login"
    android:padding="50px"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/btnbackbutton"
            android:layout_width="47dp"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter"
            android:src="@drawable/icons8_back_button_96___" />
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="102dp"
            app:srcCompat="@drawable/_701051780322"
            tools:src="@drawable/_701051780322" />
        <ImageView
            android:id="@+id/idIVQrcode"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/qr_code">
        </ImageView>

        <TextView
            android:paddingTop="100px"
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Computer Number: "
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginBottom="50px"/>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:hint="Enter The Computer Number"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/computernumbertf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Laboratory:"
            android:textStyle="bold"
            android:textSize="20dp"
            android:paddingTop="50px"/>
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>
        <Button
            android:id="@+id/btngenerate"
            android:layout_marginTop="100px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GENERATE"
            android:background="@drawable/button_box"/>
        <Button
            android:id="@+id/btnsaveqr"
            android:layout_marginTop="50px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SAVE THE QR CODE"
            android:background="@drawable/button_box"/>
    </LinearLayout>

</ScrollView>


